
<div class="row">
    <div class="col s12 grey">
        <img class="burger" src="/assets/img/Burger.png" alt="A Burger" height="236" width="319">
        <h1 class="center">Eat-Da-Burger</h1>
    </div>


    <div class="col s6 blue">
        <h3>Burger Creations</h3>
        <ul>
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>


    <div class="col s6 red">
        <h3>Devoured Burgers</h3>
        <ul>
            {{#each burgers}}
                {{#if devoured}}
                    <li>
                        {{burger_name}}
                    </li>
                {{/if}}
            {{/each}}
        </ul>
    </div>

    <div class="col s12 white">
        <h3>Add a Burger</h3>
        <form class="create-form">

        <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
        </div>

        <div class="form-group">
            <label for="devoured?">Devoured?</label><br>
            <input type="radio" name="devoured" value="1" checked> Devoured!<br>
            <input type="radio" name="devoured" value="0"> Hot and Ready
        </div>

        <button type="submit">Add Burger</button>
        </form>
    </div>
</div>




