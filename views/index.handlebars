
<div class="row">
    <div class="col s12 grey">
        <img class="burger" src="/assets/img/Burger.png" alt="A Burger" height="236" width="319">
        <h1 class="center">Eat-Da-Burger</h1>
    </div>


    <div class="col s6 blue">
        <h3>Burger Creations</h3>
        <hr>
        <ul>
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>


    <div class="col s6 red">
        <h3>Devoured Burgers</h3>
        <hr>
        <ul>
            {{#each burgers}}
                {{#if devoured}}
                    <li>
                        {{burger_name}}
                    </li>
                {{/if}}
            {{/each}}
        </ul>
    </div>

    <div class="col s12 white">
        <div class="row">
            <h3>Add a Burger</h3>
        </div>
        
        <div class="row">
            <div class="form-group col s3">
                <label for="burgerName">Burger Name:</label>
                <input type="text" id="burgerName" name="name">
            </div>
        </div>

        <form>
            <p>
                <label>
                    <input type="checkbox" value="0"/>
                    <span>Looking scrumptious...</span>
                </label>
            </p>
            <p>
                <label>
                    <input type="checkbox" value="1"/>
                    <span>Devoured!</span>
                </label>
            </p>
        </form>

        <button type="submit">Add Burger</button>
        </form>
    </div>
</div>




